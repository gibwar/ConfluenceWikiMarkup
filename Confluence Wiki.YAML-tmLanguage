  # Organizational items
  block-macro:
    patterns:
    - include: '#headings'
  headings:
    patterns:
    - include: '#heading-1'
    - include: '#heading-2'
    - include: '#heading-3'
    - include: '#heading-4'
    - include: '#heading-5'
    - include: '#heading-6'
